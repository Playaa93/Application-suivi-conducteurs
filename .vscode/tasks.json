{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Deploy automatique",
        "type": "shell",
        // lance PowerShell avec notre script
        "command": "powershell.exe",
        "args": [
          "-NoProfile",
          "-ExecutionPolicy", "Bypass",
          "-File", "${workspaceFolder}\\deploy-auto.ps1"
        ],
        "presentation": {
          "echo": true,
          "reveal": "always",
          "panel": "shared"
        }
      }
    ]
  }
  